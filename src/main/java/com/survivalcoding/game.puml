@startuml
'https://plantuml.com/class-diagram



class Hero {
    + String name
    - int hp

    + void attack(Kinoko enemy)
    + void bye()
    - void die()
}

class Cleric {
    + String name
    - int hp
    + int mp

    + void attack(Kinoko enemy)
    + void pray(int sec)
    - void selfAid()
}

class Wand {
    + String name
    - double power
}

class Wizard {
    - int hp
    - int mp
    + String name

    + void heal(Hero hero)
}


@enduml